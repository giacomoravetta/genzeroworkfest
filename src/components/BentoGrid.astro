---
// Import the Svelte islands
import MorningIsland from "./islands/MorningIsland.svelte";
import EveningIsland from "./islands/EveningIsland.svelte";
import NightIsland from "./islands/NightIsland.svelte";
import W from "./W.astro";
---

<section
    class="bento-grid-container min-h-screen relative p-8"
    style="background-color: #81FBF5;"
>
    <!-- W Background -->
    <div class="absolute inset-0 w-full opacity-20 pointer-events-none">
        <W />
    </div>
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1
                class="text-5xl font-bold bg-gradient-to-r from-slate-800 via-blue-600 to-purple-600 bg-clip-text text-transparent mb-4"
            >
                Work Festival
            </h1>
            <p class="text-xl text-slate-600 max-w-2xl mx-auto">
                Experience the rhythm of productive work across different times
                of day. Each moment brings its own energy and opportunities.
            </p>
        </div>

        <!-- Bento Grid Layout -->
        <div class="bento-grid grid gap-6 h-[800px]">
            <!-- Morning Island - Large left column -->
            <div class="morning-cell">
                <MorningIsland client:load />
            </div>

            <!-- Evening Island - Top right -->
            <div class="evening-cell">
                <EveningIsland client:load />
            </div>

            <!-- Night Island - Bottom right -->
            <div class="night-cell">
                <NightIsland client:load />
            </div>

            <!-- Additional decorative elements -->
            <div
                class="accent-cell-1 bg-gradient-to-br from-blue-100 to-indigo-200 rounded-2xl p-6 flex items-center justify-center"
            >
                <div class="text-center">
                    <div
                        class="w-12 h-12 bg-blue-500 rounded-full mx-auto mb-3 flex items-center justify-center"
                    >
                        <svg
                            class="w-6 h-6 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                    </div>
                    <h3 class="font-semibold text-slate-700">Energy Flows</h3>
                    <p class="text-sm text-slate-600 mt-1">
                        Track your productivity peaks
                    </p>
                </div>
            </div>

            <div
                class="accent-cell-2 bg-gradient-to-br from-emerald-100 to-teal-200 rounded-2xl p-6 flex items-center justify-center"
            >
                <div class="text-center">
                    <div
                        class="w-12 h-12 bg-emerald-500 rounded-full mx-auto mb-3 flex items-center justify-center"
                    >
                        <svg
                            class="w-6 h-6 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="font-semibold text-slate-700">Community</h3>
                    <p class="text-sm text-slate-600 mt-1">
                        Connect with peers
                    </p>
                </div>
            </div>

            <div
                class="accent-cell-3 bg-gradient-to-br from-rose-100 to-pink-200 rounded-2xl p-6 flex items-center justify-center"
            >
                <div class="text-center">
                    <div
                        class="w-12 h-12 bg-rose-500 rounded-full mx-auto mb-3 flex items-center justify-center"
                    >
                        <svg
                            class="w-6 h-6 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                            ></path>
                        </svg>
                    </div>
                    <h3 class="font-semibold text-slate-700">Innovation</h3>
                    <p class="text-sm text-slate-600 mt-1">Spark new ideas</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .bento-grid {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        grid-template-rows: 1fr 1fr 1fr;
        grid-template-areas:
            "morning evening accent1"
            "morning night accent2"
            "morning night accent3";
        gap: 1.5rem;
    }

    .morning-cell {
        grid-area: morning;
    }

    .evening-cell {
        grid-area: evening;
    }

    .night-cell {
        grid-area: night;
    }

    .accent-cell-1 {
        grid-area: accent1;
    }

    .accent-cell-2 {
        grid-area: accent2;
    }

    .accent-cell-3 {
        grid-area: accent3;
    }

    /* Responsive adjustments */
    @media (max-width: 1024px) {
        .bento-grid {
            grid-template-columns: 1fr 1fr;
            grid-template-rows: auto auto auto;
            grid-template-areas:
                "morning evening"
                "morning night"
                "accent1 accent2";
            height: auto;
        }

        .accent-cell-3 {
            display: none;
        }
    }

    @media (max-width: 768px) {
        .bento-grid {
            grid-template-columns: 1fr;
            grid-template-rows: auto auto auto auto;
            grid-template-areas:
                "morning"
                "evening"
                "night"
                "accent1";
            height: auto;
        }

        .accent-cell-2,
        .accent-cell-3 {
            display: none;
        }

        .bento-grid-container {
            padding: 1rem;
        }
    }

    /* Animation for grid entrance */
    .morning-cell {
        animation: slideInLeft 0.8s ease-out;
    }

    .evening-cell {
        animation: slideInRight 0.8s ease-out 0.2s both;
    }

    .night-cell {
        animation: slideInRight 0.8s ease-out 0.4s both;
    }

    .accent-cell-1,
    .accent-cell-2,
    .accent-cell-3 {
        animation: fadeInUp 0.6s ease-out 0.6s both;
    }

    @keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
