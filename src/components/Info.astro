---
import Logo from "./Logo.astro";
import Footer from "./Footer.astro";

import ProgramSchedule from "./ProgramSchedule.svelte";
import Marquee from "./Marquee.svelte";
---

<div
    class="absolute top-0 left-0 w-screen h-[100dvh] flex flex-col items-center"
>
    <!-- Mobile Navigation Menu -->
    <div
        class="mobile-menu hidden lg:hidden fixed top-0 left-0 right-0 bg-white z-50"
    >
        <nav class="h-full flex flex-col p-4">
            <a
                href="#program"
                class="mobile-nav-link font-sans font-medium text-gray-800 hover:text-black transition-all duration-300 py-2 border-l-3 border-transparent hover:border-black pl-3 hover:pl-4"
                >Programma</a
            >

            <a
                href="#contatti"
                class="mobile-nav-link font-sans font-medium text-gray-800 hover:text-black transition-all duration-300 py-2 border-l-3 border-transparent hover:border-black pl-3 hover:pl-4"
                >Contatti</a
            >
        </nav>
    </div>

    <!-- Ghost Header -->
    <header
        class="relative top-0 h-fit md:h-[20dvh] left-0 z-40 flex flex-col sm:flex-row justify-between items-center p-4 sm:p-6 lg:p-10 w-full gap-4 sm:gap-0"
    >
        <div class="logo-wrapper w-full sm:w-40 lg:w-[20dvw]">
            <Logo />
        </div>

        <div class="flex items-between justify-between w-full gap-4">
            <!-- Desktop Navigation -->
            <nav
                class="hidden lg:flex items-center justify-center gap-8 w-full"
            >
                <a
                    href="#program"
                    class="nav-link relative font-sans font-medium text-gray-800 hover:text-black transition-colors origin-center hover:scale-105 transition-transform duration-200"
                    >Programma</a
                >
                <a
                    href="#contatti"
                    class="nav-link relative font-sans font-medium text-gray-800 hover:text-black transition-colors origin-center hover:scale-105 transition-transform duration-200"
                    >Contatti</a
                >
            </nav>

            <div class="md:text-right sm:text-right">
                <h2
                    class="text-xl sm:text-2xl lg:text-4xl font-sans font-bold sm:w-auto lg:w-[20dvw]"
                >
                    18 Ottobre 2025
                </h2>
                <h3
                    class="text-xl sm:text-xl lg:text-xl font-sans font-bold sm:w-auto lg:w-[20dvw]"
                >
                    10:00 AM / 00:00 PM
                </h3>
            </div>

            <!-- Mobile Menu Button -->
            <button
                class="lg:hidden mobile-menu-btn p-2 rounded-md hover:bg-gray-100 transition-colors"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </header>

    <!-- Rotating Circle Component -->
    <Marquee client:load />

    <!-- Main Content -->
    <main
        class="w-full h-full flex flex-col gap-8 sm:gap-12 lg:gap-16 overflow-y-scroll"
    >
        <ProgramSchedule client:load />

        <!-- Footer Section -->

        <Footer />
    </main>

    <!-- Share Button -->
    <div
        class="share-button fixed bottom-4 right-4 sm:bottom-6 sm:right-6 z-50"
    >
        <button
            id="shareBtn"
            class="share-link flex items-center justify-center w-12 h-12 sm:w-14 sm:h-14 bg-purple-500 hover:bg-purple-600 rounded-full shadow-lg transition-all duration-300"
        >
            <svg
                class="w-6 h-6 sm:w-8 sm:h-8 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92s2.92-1.31 2.92-2.92S19.61 16.08 18 16.08z"
                ></path>
            </svg>
        </button>

        <!-- Share Menu -->
        <div
            id="shareMenu"
            class="share-menu hidden absolute bottom-16 right-0 bg-white rounded-lg shadow-xl p-2 min-w-48"
        >
            <button
                id="whatsappShare"
                class="share-option flex items-center w-full p-3 hover:bg-gray-100 rounded-lg transition-colors"
            >
                <svg
                    class="w-5 h-5 mr-3 text-green-500"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.465 3.488"
                    ></path>
                </svg>
                <span class="text-sm font-medium">WhatsApp</span>
            </button>
            <button
                id="telegramShare"
                class="share-option flex items-center w-full p-3 hover:bg-gray-100 rounded-lg transition-colors"
            >
                <svg
                    class="w-5 h-5 mr-3 text-blue-500"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"
                    ></path>
                </svg>
                <span class="text-sm font-medium">Telegram</span>
            </button>
            <button
                id="facebookShare"
                class="share-option flex items-center w-full p-3 hover:bg-gray-100 rounded-lg transition-colors"
            >
                <svg
                    class="w-5 h-5 mr-3 text-blue-600"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                    ></path>
                </svg>
                <span class="text-sm font-medium">Facebook</span>
            </button>
            <button
                id="twitterShare"
                class="share-option flex items-center w-full p-3 hover:bg-gray-100 rounded-lg transition-colors"
            >
                <svg
                    class="w-5 h-5 mr-3 text-black"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                    ></path>
                </svg>
                <span class="text-sm font-medium">X (Twitter)</span>
            </button>
            <button
                id="copyLink"
                class="share-option flex items-center w-full p-3 hover:bg-gray-100 rounded-lg transition-colors"
            >
                <svg
                    class="w-5 h-5 mr-3 text-gray-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                    ></path>
                </svg>
                <span class="text-sm font-medium">Copia link</span>
            </button>
        </div>
    </div>
</div>

<script>
    import { gsap } from "gsap";

    document.addEventListener("DOMContentLoaded", function () {
        // Mobile menu functionality
        const mobileMenuBtn = document.querySelector(".mobile-menu-btn");
        const mobileMenu = document.querySelector(".mobile-menu");

        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener("click", function (e) {
                e.stopPropagation();
                mobileMenu.classList.toggle("hidden");

                // Animate menu
                if (!mobileMenu.classList.contains("hidden")) {
                    gsap.from(mobileMenu, {
                        opacity: 0,
                        y: -20,
                        duration: 0.3,
                        ease: "power2.out",
                    });
                }
            });

            // Close menu when clicking outside
            document.addEventListener("click", function (e) {
                if (
                    !mobileMenu.contains(e.target) &&
                    !mobileMenuBtn.contains(e.target)
                ) {
                    mobileMenu.classList.add("hidden");
                }
            });

            // Close menu when clicking nav links
            const mobileNavLinks =
                document.querySelectorAll(".mobile-nav-link");
            mobileNavLinks.forEach((link) => {
                link.addEventListener("click", () => {
                    mobileMenu.classList.add("hidden");
                });
            });
        }

        // Share button functionality
        const shareButton = document.querySelector(".share-button");
        const shareBtn = document.getElementById("shareBtn");
        const shareMenu = document.getElementById("shareMenu");

        const shareData = {
            title: "Generazione Zero Workfest",
            text: "Un festival per ripensare il rapporto con il lavoro attraverso creatività, socializzazione e confronto. 🎭✨",
            url: "https://genzeroworkfest.it",
        };

        if (shareButton) {
            // Entry animation
            gsap.from(shareButton, {
                scale: 0,
                rotation: 180,
                duration: 0.8,
                ease: "back.out(1.7)",
                delay: 1,
            });

            // Floating animation
            gsap.to(shareButton, {
                y: -10,
                duration: 2,
                ease: "power2.inOut",
                yoyo: true,
                repeat: -1,
            });

            // Hover animations
            shareButton.addEventListener("mouseenter", function () {
                gsap.to(shareButton, {
                    scale: 1.1,
                    duration: 0.3,
                    ease: "power2.out",
                });
            });

            shareButton.addEventListener("mouseleave", function () {
                gsap.to(shareButton, {
                    scale: 1,
                    duration: 0.3,
                    ease: "power2.out",
                });
            });

            // Share button click
            shareBtn.addEventListener("click", async function (e) {
                e.stopPropagation();

                // Try Web Share API first
                if (navigator.share) {
                    try {
                        await navigator.share(shareData);
                        return;
                    } catch (err) {
                        console.log("Web Share API failed, showing menu");
                    }
                }

                // Fallback: show share menu
                shareMenu.classList.toggle("hidden");
            });

            // Close menu when clicking outside
            document.addEventListener("click", function (e) {
                if (!shareButton.contains(e.target)) {
                    shareMenu.classList.add("hidden");
                }
            });

            // Share options
            document
                .getElementById("whatsappShare")
                .addEventListener("click", function () {
                    const url = `https://wa.me/?text=${encodeURIComponent(shareData.text + " " + shareData.url)}`;
                    window.open(url, "_blank");
                    shareMenu.classList.add("hidden");
                });

            document
                .getElementById("telegramShare")
                .addEventListener("click", function () {
                    const url = `https://t.me/share/url?url=${encodeURIComponent(shareData.url)}&text=${encodeURIComponent(shareData.text)}`;
                    window.open(url, "_blank");
                    shareMenu.classList.add("hidden");
                });

            document
                .getElementById("facebookShare")
                .addEventListener("click", function () {
                    const url = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareData.url)}`;
                    window.open(url, "_blank");
                    shareMenu.classList.add("hidden");
                });

            document
                .getElementById("twitterShare")
                .addEventListener("click", function () {
                    const url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareData.text)}&url=${encodeURIComponent(shareData.url)}`;
                    window.open(url, "_blank");
                    shareMenu.classList.add("hidden");
                });

            document
                .getElementById("copyLink")
                .addEventListener("click", async function () {
                    try {
                        await navigator.clipboard.writeText(shareData.url);
                        // Show feedback
                        const button = this;
                        const originalText =
                            button.querySelector("span").textContent;
                        button.querySelector("span").textContent =
                            "Link copiato!";
                        setTimeout(() => {
                            button.querySelector("span").textContent =
                                originalText;
                        }, 2000);
                    } catch (err) {
                        console.error("Failed to copy link:", err);
                    }
                    shareMenu.classList.add("hidden");
                });
        }
    });
</script>

<style>
    .logo-wrapper {
        cursor: pointer;
        transform-origin: center center;
        transition: filter 0.3s ease;
    }

    .share-button {
        transform-origin: center center;
    }

    .share-link {
        box-shadow: 0 4px 15px rgba(168, 85, 247, 0.4);
    }

    .share-link:hover {
        box-shadow: 0 6px 20px rgba(168, 85, 247, 0.6);
        transform: translateY(-2px);
    }

    .share-menu {
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

    .share-option:hover {
        background-color: #f3f4f6;
    }

    /* Navigation hover underline effect */
    .nav-link::after {
        content: "";
        position: absolute;
        bottom: -4px;
        left: 50%;
        width: 0;
        height: 2px;
        background: #000;
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }

    .nav-link:hover::after {
        width: 100%;
    }
</style>
