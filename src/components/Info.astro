---
import Logo from "./Logo.astro";

import FestivalSpirit from "./FestivalSpirit.svelte";
import ProgramSchedule from "./ProgramSchedule.svelte";
---

<div
    class="absolute top-0 left-0 w-screen h-[100dvh] flex flex-col items-center"
>
    <header
        class="h-fit md:h-[20dvh] flex flex-col sm:flex-row justify-between items-center p-4 sm:p-6 lg:p-10 w-full gap-4 sm:gap-0 flex-shrink-0"
    >
        <div class="logo-wrapper w-full sm:w-40 lg:w-[20dvw]"><Logo /></div>
        <h2
            class="text-xl sm:text-2xl lg:text-4xl font-sans font-bold text-center sm:text-right sm:w-auto lg:w-[20dvw]"
        >
            18 Ottobre 2025
        </h2>
    </header>

    <!-- Fixed header content -->
    <div
        class="fixed top-0 h-fit md:h-[20dvh] left-0 z-40 flex flex-col sm:flex-row justify-between items-center p-4 sm:p-6 lg:p-10 w-full gap-4 sm:gap-0"
    >
        <div class="logo-wrapper w-full sm:w-40 lg:w-[20dvw]"><Logo /></div>
        <h2
            class="text-xl sm:text-2xl lg:text-4xl font-sans font-bold text-center sm:text-right sm:w-auto lg:w-[20dvw]"
        >
            18 Ottobre 2025
        </h2>
    </div>

    <main
        class="w-full h-full flex flex-col gap-3 sm:gap-4 lg:gap-5 overflow-y-scroll"
    >
        <!-- Festival Spirit Section -->
        <FestivalSpirit client:load />
        <ProgramSchedule client:load />
    </main>

    <!-- WhatsApp Share Button -->
    <div
        class="whatsapp-button fixed bottom-4 right-4 sm:bottom-6 sm:right-6 z-50"
    >
        <a
            href="https://wa.me/?text=Check%20out%20this%20awesome%20Work%20Festival!%20%F0%9F%9A%80%20https://genzeroworkfest.com"
            target="_blank"
            rel="noopener noreferrer"
            class="whatsapp-link flex items-center justify-center w-12 h-12 sm:w-14 sm:h-14 bg-green-500 hover:bg-green-600 rounded-full shadow-lg transition-all duration-300"
        >
            <svg
                class="w-6 h-6 sm:w-8 sm:h-8 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.465 3.488"
                ></path>
            </svg>
        </a>
    </div>

    <script>
        import { gsap } from "gsap";

        document.addEventListener("DOMContentLoaded", function () {
            const logoWrapper = document.querySelector(".logo-wrapper");

            if (logoWrapper) {
                // Hover interactions
                logoWrapper.addEventListener("mouseenter", function () {
                    gsap.to(logoWrapper, {
                        scale: 1.1,
                        rotation: 2,
                        duration: 0.3,
                        ease: "power2.out",
                    });
                });

                logoWrapper.addEventListener("mouseleave", function () {
                    gsap.to(logoWrapper, {
                        scale: 1,
                        rotation: 0,
                        duration: 0.5,
                        ease: "power2.out",
                    });
                });
            }

            // WhatsApp button animations
            const whatsappButton = document.querySelector(".whatsapp-button");

            if (whatsappButton) {
                // Entry animation
                gsap.from(whatsappButton, {
                    scale: 0,
                    rotation: 180,
                    duration: 0.8,
                    ease: "back.out(1.7)",
                    delay: 1,
                });

                // Floating animation
                gsap.to(whatsappButton, {
                    y: -10,
                    duration: 2,
                    ease: "power2.inOut",
                    yoyo: true,
                    repeat: -1,
                });

                // Hover animations
                const whatsappLink =
                    whatsappButton.querySelector(".whatsapp-link");

                whatsappButton.addEventListener("mouseenter", function () {
                    gsap.to(whatsappButton, {
                        scale: 1.1,
                        duration: 0.3,
                        ease: "power2.out",
                    });
                });

                whatsappButton.addEventListener("mouseleave", function () {
                    gsap.to(whatsappButton, {
                        scale: 1,
                        duration: 0.3,
                        ease: "power2.out",
                    });
                });
            }
        });
    </script>

    <style>
        .logo-wrapper {
            cursor: pointer;
            transform-origin: center center;
            transition: filter 0.3s ease;
        }

        .logo-wrapper:hover {
            filter: drop-shadow(0 0 10px rgba(0, 0, 0, 0.2));
        }

        .whatsapp-button {
            transform-origin: center center;
        }

        .whatsapp-link {
            box-shadow: 0 4px 15px rgba(34, 197, 94, 0.4);
        }

        .whatsapp-link:hover {
            box-shadow: 0 6px 20px rgba(34, 197, 94, 0.6);
            transform: translateY(-2px);
        }
    </style>
</div>
