---
import Logo from "./Logo.astro";
import Footer from "./Footer.astro";
import ProgramSchedule from "./ProgramSchedule.svelte";
import Marquee from "./Marquee.svelte";
import { getProgramData } from "../lib/notion";
export const prerender = false;
const { env } = Astro.locals.runtime || { env: {} };
const programData = await getProgramData(env);
console.log(programData);
---

<div
    class="absolute top-0 left-0 w-screen h-[100dvh] flex flex-col items-center"
>
    <div
        class="mobile-menu hidden lg:hidden fixed top-0 left-0 right-0 bg-white z-50 shadow-lg border-b border-gray-200"
    >
        <nav class="flex flex-col p-4 pt-6">
            <div class="mb-4 pb-4 border-b border-gray-100">
                <h3 class="text-lg font-bold text-gray-800">Menu</h3>
            </div>
            <a
                href="#program"
                class="mobile-nav-link font-sans font-medium text-gray-800 hover:text-black transition-all duration-300 py-3 px-4 rounded-md hover:bg-gray-100 border-l-4 border-transparent hover:border-black"
                >Programma</a
            >

            <a
                href="#contatti"
                class="mobile-nav-link font-sans font-medium text-gray-800 hover:text-black transition-all duration-300 py-3 px-4 rounded-md hover:bg-gray-100 border-l-4 border-transparent hover:border-black"
                >Contatti</a
            >

            <!-- Mobile Event Info -->
            <div class="mt-6 pt-4 border-t border-gray-100 text-center">
                <div class="mb-3">
                    <h4 class="text-sm font-bold text-gray-800">
                        18 Ottobre 2025
                    </h4>
                    <p class="text-sm text-gray-600">10:00 AM / 00:00 PM</p>
                </div>
                <div class="text-xs text-gray-600 space-y-1">
                    <p class="font-semibold">Parco della Resistenza</p>
                    <p>Via Avogadro, 103</p>
                    <p>Caronno Pertusella</p>
                    <a
                        href="https://maps.google.com/?q=Parco+della+resistenza,+Via+Avogadro,+103,+Caronno+Pertusella"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-1 text-black transition-colors duration-200 hover:underline mt-2"
                    >
                        <svg
                            class="w-3 h-3"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                            ></path>
                        </svg>
                        <span>Visualizza mappa</span>
                    </a>
                </div>
            </div>
        </nav>
    </div>

    <!-- Ghost Header -->
    <header class="relative h-fit w-full z-40">
        <!-- Desktop: Single horizontal line -->
        <div
            class="hidden lg:flex items-center justify-between w-full h-full p-6 xl:p-8"
        >
            <!-- Logo -->
            <div class="logo-wrapper">
                <Logo widht="100%" height="100%" />
            </div>

            <!-- Navigation -->
            <nav class="flex items-center gap-6 xl:gap-8">
                <a
                    href="#program"
                    class="nav-link relative font-sans font-medium text-black transition-all duration-200 origin-center hover:scale-105"
                    >Programma</a
                >
                <a
                    href="#contatti"
                    class="nav-link relative font-sans font-medium text-black transition-all duration-200 origin-center hover:scale-105"
                    >Contatti</a
                >
            </nav>

            <!-- Event Info -->
            <div class="text-right">
                <div class="space-y-1">
                    <h2
                        class="text-xl xl:text-2xl font-sans font-bold leading-tight"
                    >
                        18 Ottobre 2025
                    </h2>
                    <h3
                        class="text-lg font-sans font-medium leading-tight text-black"
                    >
                        10:00 AM / 00:00 PM
                    </h3>
                    <div class="text-sm space-y-0.5">
                        <p class="font-medium text-black">
                            Parco della Resistenza
                        </p>
                        <p class="text-black">
                            Via Avogadro, 103, Caronno Pertusella
                        </p>
                        <a
                            href="https://maps.google.com/?q=Parco+della+resistenza,+Via+Avogadro,+103,+Caronno+Pertusella"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-1 text-black transition-colors duration-200 hover:underline"
                        >
                            <svg
                                class="w-3 h-3"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                                ></path>
                            </svg>
                            <span>Visualizza mappa</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile/Tablet: Stacked layout -->
        <div class="lg:hidden p-2 sm:p-3 md:p-4">
            <!-- Top row: Logo and Menu Button -->
            <div class="flex items-center justify-between mb-4">
                <div class="logo-wrapper flex-1">
                    <Logo widht="100%" height="100%" />
                </div>
            </div>

            <!-- Bottom section: Event Info - Single horizontal line -->
            <div class="flex flex-row justify-between w-full">
                <div
                    class="flex items-center justify-between w-full text-xs sm:text-sm"
                >
                    <div class="flex flex-col justify-leftitems-center">
                        <span class="font-bold text-black">18 Ottobre 2025</span
                        >

                        <span class="font-medium text-black"
                            >10:00 AM / 00:00 PM</span
                        >
                    </div>

                    <a
                        href="https://maps.google.com/?q=Parco+della+resistenza,+Via+Avogadro,+103,+Caronno+Pertusella"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-1 text-black transition-colors duration-200 hover:underline"
                    >
                        <svg
                            class="w-3 h-3"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                            ></path>
                        </svg>
                        <span>Mappa</span>
                    </a>

                    <button
                        class="mobile-menu-btn p-1.5 sm:p-2 rounded-md hover:bg-gray-100 transition-colors relative z-50 flex-shrink-0"
                    >
                        <svg
                            class="w-5 h-5 sm:w-6 sm:h-6 transition-transform duration-300"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                class="hamburger-line"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </header>
    <!-- Rotating Circle Component -->
    <Marquee client:load />

    <!-- Main Content -->
    <main
        class="w-full h-full flex flex-col gap-8 sm:gap-12 lg:gap-16 overflow-y-scroll"
    >
        <ProgramSchedule client:load programSections={programData} />

        <!-- Footer Section -->

        <Footer />
    </main>

    <!-- Share Button -->
    <div
        class="share-button fixed bottom-4 right-4 sm:bottom-6 sm:right-6 z-50"
    >
        <button
            id="shareBtn"
            class="share-link flex items-center justify-center w-12 h-12 sm:w-14 sm:h-14 bg-purple-500 hover:bg-purple-600 rounded-full shadow-lg transition-all duration-300"
        >
            <svg
                class="w-6 h-6 sm:w-8 sm:h-8 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92s2.92-1.31 2.92-2.92S19.61 16.08 18 16.08z"
                ></path>
