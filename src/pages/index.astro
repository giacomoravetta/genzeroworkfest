---
import Layout from "../layouts/Layout.astro";

import Info from "../components/Info.astro";
import FestivalSpirit from "../components/FestivalSpirit.svelte";
import LoadingScreen from "../components/LoadingScreen.svelte";

const seoData = {
    title: "Generazione Zero Workfest",
    description:
        "Un festival per ripensare il rapporto con il lavoro attraverso creatività, socializzazione e confronto. Dungeons & Dragons, yoga, laboratori creativi, dibattiti su legalità e integrazione, musica dal vivo e tanto altro.",
    keywords:
        "generazione zero, workfest, festival lavoro, creatività, dungeons dragons, yoga, laboratori creativi, antimafia, integrazione, cittadinanza, musica dal vivo, beer pong, dibattiti sociali",
    image: "/W.svg",
};
---

<Layout
    title={seoData.title}
    description={seoData.description}
    keywords={seoData.keywords}
    image={seoData.image}
>
    <LoadingScreen client:only="svelte" />
    <div id="main-content" class="relative opacity-0">
        <FestivalSpirit client:only="svelte" />
        <Info />
    </div>
</Layout>

<style>
    #main-content {
        transition: opacity 0.5s ease-in-out;
    }

    #main-content.loaded {
        opacity: 1;
    }
</style>

<script>
    // Show main content after loading screen is done
    window.addEventListener("loadingComplete", () => {
        const mainContent = document.getElementById("main-content");
        if (mainContent) {
            mainContent.classList.add("loaded");
        }
    });
</script>
